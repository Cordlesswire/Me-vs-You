<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.NoActionBar">
        <!-- Primary theme color of the app (sets background color of app bar) -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <!-- Background color of buttons in the app -->
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorButtonNormal">@color/colorAccent</item>
        <item name="android:navigationBarColor">@color/navigationBarColor</item>

        <item name="android:spinnerStyle">@style/Widget.AppCompat.Light.Spinner.DropDown.ActionBar</item>
        <!--
        <item name="android:statusBarColor">@android:color/transparent</item>

        <item name="android:textColorPrimary">@color/textColorPrimary</item>
        -->
</style>

    <!-- LinearLayout Vertical -->
    <style name="LinearLayoutVertical" parent="AppTheme">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:orientation">vertical</item>

    </style>

    <!-- Team Name TextViews. -->
    <style name="teamNameText" parent="AppTheme">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">#616161</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:paddingTop">20dp</item>
        <item name="android:paddingBottom">20dp</item>
    </style>

    <!-- Score TextViews. -->
    <style name="scoreText" parent="AppTheme">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:textSize">56sp</item>
        <item name="android:textColor">#000000</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:fontFamily">sans-serif-light</item>
        <item name="android:padding">20dp</item>
        <item name="android:layout_marginBottom">24dp</item>
    </style>

    <!-- Score Buttons. -->
    <style name="buttons" parent="AppTheme">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">24dp</item>
        <item name="android:layout_marginRight">24dp</item>
        <item name="android:layout_marginBottom">8dp</item>
        <item name="android:background">#FF8A80</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:elevation">10dp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="buttons.second">
        <item name="android:background">#FF5252</item>
    </style>

    <style name="buttons.third">
        <item name="android:background">#FF1744</item>
    </style>

    <!-- Reset Buttons. -->
    <style name="resetButton" parent="AppTheme">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">10dp</item>
        <item name="android:layout_alignParentBottom">true</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:elevation">10dp</item>
        <item name="android:textStyle">bold</item>

    </style>

    <style name="resetButton.End">
        <item name="android:layout_centerHorizontal">false</item>
        <item name="android:layout_toRightOf">@id/resetButton</item>
        <item name="android:layout_alignParentRight">true</item>
    </style>

    <!-- Divider. -->
    <style name="divider" parent="AppTheme">
        <item name="android:layout_width">2dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_marginTop">16dp</item>
        <item name="background">@color/colorPrimary</item>
    </style>


</resources>