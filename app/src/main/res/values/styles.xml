<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Primary theme color of the app (sets background color of app bar) -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <!-- Background color of buttons in the app -->
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorButtonNormal">@color/colorAccent</item>
        <item name="android:textColor">@color/textColorPrimary</item>
    </style>

    <!-- Starting Image Vertical Layout -->
    <style name="startImage" parent="AppTheme">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">@dimen/startImage_height</item>
        <item name="android:layout_weight">2</item>
    </style>

    <!-- Starting Image Horizontal Layout -->
    <style name="startImage.Horiz">
        <item name="android:layout_width">@dimen/startImage_height</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">4</item>
    </style>

    <!-- Edit Texts -->
    <style name="editText" parent="AppTheme">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAlignment">center</item>
        <item name="android:inputType">textCapWords</item>
        <item name="android:padding">@dimen/editText_padding</item>
    </style>

    <!-- LinearLayout Vertical -->
    <style name="LinearLayoutVertical" parent="AppTheme">
        <item name="android:layout_width">@dimen/linearVertical_width</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:orientation">vertical</item>
        <item name="android:paddingBottom">@dimen/linearVertical_padding</item>

    </style>

    <!-- Team Name TextViews. -->
    <style name="teamNameText" parent="AppTheme">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:textSize">@dimen/teamText_size</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:paddingTop">@dimen/teamText_padding_top_bottom</item>
        <item name="android:paddingBottom">@dimen/teamText_padding_top_bottom</item>
    </style>

    <!-- Player Images. -->
    <style name="playersImages" parent="AppTheme">
        <item name="android:layout_width">@dimen/imagePlayer_width_height</item>
        <item name="android:layout_height">@dimen/imagePlayer_width_height</item>
        <item name="android:layout_gravity">center_horizontal</item>
    </style>

    <!-- Score TextViews. -->
    <style name="scoreText" parent="AppTheme">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:textSize">@dimen/scoreText_size</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:fontFamily">sans-serif-light</item>
        <item name="android:padding">@dimen/scoreText_padding</item>
        <item name="android:layout_marginBottom">16dp</item>
    </style>

    <!-- Score Buttons. -->
    <style name="buttons" parent="AppTheme">
        <item name="android:layout_width">@dimen/buttons_width</item>
        <item name="android:layout_height">@dimen/button_height</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:layout_marginLeft">@dimen/buttons_marginLeftRight</item>
        <item name="android:layout_marginRight">@dimen/buttons_marginLeftRight</item>
        <item name="android:layout_marginBottom">@dimen/buttons_marginBottom</item>
        <item name="android:background">@drawable/button1</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="buttons.second">
        <item name="android:background">@drawable/button2</item>
    </style>

    <style name="buttons.third">
        <item name="android:background">@drawable/button3</item>
    </style>

    <!-- Winner's text. -->
    <style name="winnersText" parent="AppTheme">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_below">@id/linearHor1</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:padding">@dimen/winnersText_padding</item>
        <item name="android:textSize">@dimen/winnersText_size</item>
        <item name="android:visibility">visible</item>
    </style>

    <!-- LinearLayout Horizontal Bottom. -->
    <style name="LinearHorizontal" parent="AppTheme">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:layout_marginTop">@dimen/linearHoriz_marginTop</item>
    </style>

    <!-- Reset / Start Button. -->
    <style name="buttons.Reset">
        <item name="android:layout_margin">@dimen/buttonReset_margin</item>
        <item name="android:background">@drawable/button_reset</item>
    </style>

    <!-- Finish Button. -->
    <style name="buttons.Reset.Blue">
        <item name="android:background">@drawable/button_finish</item>
    </style>

    <!-- Divider. -->
    <style name="divider" parent="AppTheme">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
    </style>

</resources>